# LangGraph Norns Agent Server
FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install langgraph-cli first (for faster iteration)
RUN pip install --no-cache-dir "langgraph-cli[inmem]"

# Copy and install the hlidskjalf package
COPY pyproject.toml ./hlidskjalf/
COPY README.md ./hlidskjalf/
COPY src ./hlidskjalf/src/
COPY skills ./hlidskjalf/skills/
RUN pip install --no-cache-dir -e ./hlidskjalf

# The langgraph.json will be mounted at runtime
# Environment variables will be injected via docker-compose

# Expose the LangGraph API port
EXPOSE 2024

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:2024/info || exit 1

# Run LangGraph server (config mounted at /app/langgraph.json)
CMD ["langgraph", "dev", "--config", "/app/langgraph.json", "--host", "0.0.0.0", "--port", "2024", "--no-browser"]
