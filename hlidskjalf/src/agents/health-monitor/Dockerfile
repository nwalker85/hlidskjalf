# Health Monitor Subagent
# Auto-generated by Norns

FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    langchain>=0.3.0 \
    langchain-openai>=0.2.0 \
    langchain-anthropic>=0.2.0 \
    langgraph>=0.2.0 \
    "langgraph-cli[inmem]"

# Copy agent code
COPY . /app/health_monitor/

# Create langgraph config
RUN echo '{ \
  "python_version": "3.13", \
  "dependencies": ["."], \
  "graphs": { \
    "health-monitor": "./health_monitor/agent.py:HEALTH_MONITOR_GRAPH" \
  } \
}' > /app/langgraph.json

ENV PYTHONPATH=/app

EXPOSE 8100

HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8100/info || exit 1

CMD ["langgraph", "dev", "--host", "0.0.0.0", "--port", "8100", "--no-browser"]
